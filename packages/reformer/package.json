{
  "name": "reformer",
  "version": "1.0.0-beta.2",
  "description": "Reactive form state management library for React with signals-based architecture",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./behaviors": {
      "types": "./dist/behaviors.d.ts",
      "import": "./dist/behaviors.js"
    },
    "./validators": {
      "types": "./dist/validators.d.ts",
      "import": "./dist/validators.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "vite build && tsc -p tsconfig.json",
    "dev": "vite",
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "react",
    "forms",
    "form-validation",
    "validation",
    "state-management",
    "signals",
    "reactive",
    "typescript",
    "hooks",
    "form-builder",
    "dynamic-forms"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Alexandr Bukhtatyy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexandrBukhtatyy/ReFormer.git"
  },
  "homepage": "https://alexandrbukhtatyy.github.io/ReFormer/",
  "bugs": {
    "url": "https://github.com/AlexandrBukhtatyy/ReFormer/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "llms.txt"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@preact/signals-core": "^1.8.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/utils": "^4.0.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.8"
  }
}
